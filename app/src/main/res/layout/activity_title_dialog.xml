<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.lifeistech.android.twittertest.TitleDialogActivity"
    android:gravity="center|center_vertical|center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title:"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/titletx"
        android:layout_toLeftOf="@+id/titletx"
        android:layout_toStartOf="@+id/titletx"
        android:layout_gravity="left" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/titletx"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:layout_gravity="center_horizontal" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/titletx"
        android:layout_alignEnd="@+id/titletx"
        android:id="@+id/radioGroup"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/pink"
            android:checked="false"
            android:tag="#aaff00ed"
            android:button="@null"
            android:background="@drawable/rb_pink"
            android:layout_marginRight="22dp" />

        <RadioButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/aqua"
            android:checked="false"
            android:tag="#aa00fff2"
            android:button="@null"
            android:background="@drawable/rb_aqua"
            android:layout_marginRight="22dp" />

        <RadioButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/orange"
            android:checked="false"
            android:tag="#aaff9100"
            android:button="@null"
            android:background="@drawable/rb_orange"
            android:layout_marginRight="22dp" />

        <RadioButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/green"
            android:tag="#aa19ff00"
            android:button="@null"
            android:background="@drawable/rb_green"
            android:checked="false"
            />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/okbt"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
